{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2024",

    "module": "commonjs",
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*", "__tests__"],
  "exclude": ["node_modules"]
}
